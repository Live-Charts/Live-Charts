<UserControl x:Class="Wpf.Maps.GeoMapExample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wpf.Maps"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" 
             d:DataContext="{d:DesignInstance local:GeoMapExample}">
    <Grid>
       <lvc:GeoMap HeatMap="{Binding Values}" Source="Maps/World.xml" LanguagePack="{Binding LanguagePack}" /> 
    </Grid>
</UserControl>
