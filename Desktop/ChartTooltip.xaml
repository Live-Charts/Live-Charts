<UserControl x:Class="Desktop.ChartTooltip"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:desktop="clr-namespace:Desktop"
			 mc:Ignorable="d" d:DataContext="{d:DesignInstance desktop:ChartTooltip}"
			 Foreground="WhiteSmoke"
			 FontFamily="Calibri"
			 FontSize="11" >
    <Border CornerRadius="2">
        <Border.Background>
            <SolidColorBrush Color="#303030" Opacity=".85"/>
        </Border.Background>
        <StackPanel Margin="4">
            <TextBlock Text="{Binding Header}" Margin="0 2" HorizontalAlignment="Center" FontWeight="SemiBold"/>
			<ItemsControl ItemsSource="{Binding Data}" Grid.IsSharedSizeScope="True">
				<ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type desktop:IndexedTooltipData}">
						<Grid Margin="2">
							<Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="Title"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="Value"/>
                            </Grid.ColumnDefinitions>
                            <Ellipse Width="11" Height="11" StrokeThickness="1" 
                                     Stroke="{Binding Stroke}" 
                                     Fill="{Binding Fill}"/>
                            <TextBlock Grid.Column="1" Text="{Binding Series.Title}" Margin="4 0" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="{Binding Value}" VerticalAlignment="Center"/>
                        </Grid>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
        </StackPanel>
    </Border>
</UserControl>
